<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anacristinapg.proyectotfg.Interfaz.StopActivity"
    android:id="@+id/j"
    android:background="@drawable/normal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/btn_stop"
        android:background="@drawable/btn_circle"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_configurar"
        android:background="@drawable/btn_rectangle_oval"
        android:width="55dp"
        android:height="55dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:drawableBottom="@drawable/config"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btn_stop"
        android:layout_toStartOf="@+id/btn_stop" />

</RelativeLayout>
