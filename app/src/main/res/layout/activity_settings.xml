<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anacristinapg.proyectotfg.SettingActivity"
    android:background="@drawable/configuracion">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/btn_continuar"
        android:textSize="16dp"
        android:width="150dp"
        android:height="35dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_rectangle_oval"
        android:layout_alignTop="@+id/btn_ayuda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Distancia:"
        android:id="@+id/lbl_distancia"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_marginTop="235dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_distancia"
        android:textColor="#FF000000"
        android:layout_alignBottom="@+id/lbl_distancia"
        android:layout_toRightOf="@+id/lbl_distancia"
        android:layout_toStartOf="@+id/lbl_metros"
        android:layout_toLeftOf="@+id/lbl_metros" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="m."
        android:textColor="#FF000000"
        android:id="@+id/lbl_metros"
        android:textSize="15dp"
        android:layout_marginLeft="3dp"
        android:layout_above="@+id/lbl_tiempo"
        android:layout_alignRight="@+id/btn_continuar"
        android:layout_alignEnd="@+id/btn_continuar"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tiempo:"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:id="@+id/lbl_tiempo"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lbl_distancia"
        android:layout_alignLeft="@+id/lbl_distancia"
        android:layout_alignStart="@+id/lbl_distancia" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#FF000000"
        android:id="@+id/txt_tiempo"
        android:layout_alignBottom="@+id/lbl_tiempo"
        android:layout_toRightOf="@+id/lbl_tiempo"
        android:layout_toLeftOf="@+id/lbl_metros"
        android:layout_toStartOf="@+id/lbl_metros" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="min."
        android:textColor="#FF000000"
        android:textSize="15dp"
        android:id="@+id/lbl_min1"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@+id/lbl_tiempo"
        android:layout_toRightOf="@+id/txt_distancia"
        android:layout_toEndOf="@+id/txt_distancia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Reposo:"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:id="@+id/lbl_reposo"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lbl_tiempo"
        android:layout_alignLeft="@+id/lbl_tiempo"
        android:layout_alignStart="@+id/lbl_tiempo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:textColor="#FF000000"
        android:id="@+id/txt_reposo"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/lbl_reposo"
        android:layout_toRightOf="@+id/lbl_tiempo"
        android:layout_alignRight="@+id/txt_tiempo"
        android:layout_alignEnd="@+id/txt_tiempo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="min."
        android:textColor="#FF000000"
        android:textSize="15dp"
        android:id="@+id/lbl_min2"
        android:layout_alignTop="@+id/lbl_reposo"
        android:layout_alignLeft="@+id/lbl_min1"
        android:layout_alignStart="@+id/lbl_min1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TelÃ©fono:"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lbl_reposo"
        android:layout_alignLeft="@+id/lbl_reposo"
        android:layout_alignStart="@+id/lbl_reposo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/txt_telefono"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignRight="@+id/lbl_metros"
        android:layout_alignEnd="@+id/lbl_metros"
        android:layout_toRightOf="@+id/lbl_distancia"
        android:layout_toEndOf="@+id/lbl_distancia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/btn_ayuda"
        android:textSize="16dp"
        android:width="150dp"
        android:height="35dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rectangle_oval"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
