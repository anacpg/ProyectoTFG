<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anacristinapg.proyectotfg.SettingActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seleccione los parámetros que desea que tenga en cuenta la aplicación."
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distancia:"
        android:gravity="center"
        android:id="@+id/lbl_distancia"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txt_distancia"
        android:layout_alignBottom="@+id/lbl_distancia"
        android:layout_toEndOf="@+id/lbl_distancia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="m."
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_alignBottom="@+id/txt_distancia"
        android:layout_toEndOf="@+id/txt_distancia"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reposo:"
        android:id="@+id/lb_reposo"
        android:layout_below="@+id/txt_distancia"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_toStartOf="@+id/txt_reposo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_reposo"
        android:layout_alignBottom="@+id/lb_reposo"
        android:layout_alignStart="@+id/txt_distancia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="min."
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/txt_reposo"
        android:layout_toEndOf="@+id/txt_reposo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo:"
        android:id="@+id/lbl_tiempo"
        android:gravity="center"
        android:layout_below="@+id/lb_reposo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/lbl_distancia" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/lbl_tiempo"
        android:layout_alignStart="@+id/txt_reposo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="min."
        android:id="@+id/lbl_min"
        android:layout_alignBottom="@+id/lbl_tiempo"
        android:layout_toEndOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Teléfono:"
        android:id="@+id/textView5"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:layout_toStartOf="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/editText"
        android:layout_alignEnd="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:id="@+id/btn_continuar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
